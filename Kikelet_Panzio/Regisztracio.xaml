<Window x:Class="Kikelet_Panzio.Regisztracio"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kikelet_Panzio"
        mc:Ignorable="d"
        Title="Regisztracio" Height="450" Width="800">
    <StackPanel>
        <Label Content="Azonosító"/>
        <TextBlock Name="TbkAzonosito"/>
        <Label Content="Neve"/>
        <TextBox Name="TbxNev"/>
        <Label Content="Születési dátum"/>
        <TextBox Name="TbxSzuDatum"/>
        <Label Content="Email címe"/>
        <TextBox Name="TbxEmail"/>
        <Label Content="VIP ügyfél?"/>
        <CheckBox Name="CkBVip"  Margin="23,0,0,0" Checked="CheckBox_Checked"/>
        <Button Content="Regisztrálás" Name="BtnRegisztralas" Width="75" HorizontalAlignment="Left" Margin="10" Click="BtnRegisztralas_Click"/>
        <Button Name="BtnAllomanyba_Mentes" Content="Regisztráció adatainak letöltése" Width="175" Margin="10" Click="BtnAllomanyba_Mentes_Click"/>
        <DataGrid Name="DgrRegi"/>
    </StackPanel>
</Window>
